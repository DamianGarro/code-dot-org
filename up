#!/usr/bin/env ruby
# Self-contained wrapper script to run foreman on our project's three processes.

proc = <<Procfile
dashboard: bin/dashboard-server
pegasus: bin/pegasus-server
blockly: bin/blockly-dev
Procfile

require 'tempfile'
procfile = Tempfile.new 'procfile'
procfile.write(proc)
procfile.close

def load_gem(name)
  begin
    gem name
  rescue LoadError
    system("gem install #{name}")
    Gem.clear_paths
    retry
  end
  require name
end

load_gem 'foreman'
system "foreman start -f #{procfile.path} -d #{__dir__}"
